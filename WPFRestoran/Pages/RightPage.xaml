<Page x:Class="WPFRestoran.Pages.RightPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPFRestoran.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="250" d:DesignWidth="800"
      Title="RightPage">

    <Grid>
        <Image Source="\Resources\remi.png" MinWidth="800" MinHeight="150" Stretch="UniformToFill" Margin="0,-40,0,-70" RenderTransformOrigin="0.5,0.5">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="-0.411"/>
                    <RotateTransform/>
                    <TranslateTransform X="-0.743"/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
    </Grid>
</Page>
